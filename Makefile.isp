ISP_PREFIX ?= $(HOME)/.local/isp/

libbsp-%: %
	$(MAKE) -C $< -f Makefile.bsp libbsp

install-%: % libbsp-%
	$(MAKE) -C $< -f Makefile.bsp install

clean-%: %
	$(MAKE) -C $< -f Makefile.bsp clean

libbsp: libbsp-hifive libbsp-ssith-p1 libbsp-ssith-p2

install: install-hifive install-ssith-p1 install-ssith-p2

clean: clean-hifive clean-ssith-p1 clean-ssith-p2